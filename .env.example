# === Database ===
# PostgreSQL connection string (Neon)
# Format: postgres://username:password@hostname:port/database
DATABASE_URL=postgres://username:password@hostname:port/database

# === Analytics (PostHog) ===
# PostHog project API key (public, used client-side)
NEXT_PUBLIC_POSTHOG_KEY=phc_your_key_here
# PostHog ingest host
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# === External APIs (backend data pipeline only) ===
# RapidAPI key for tennis data APIs
RAPIDAPI_KEY=your_rapidapi_key
# SportRadar API key
SPORTRADAR_API_KEY=your_sportradar_key

# === Optional ===
# Set to false in development if PostgreSQL doesn't use SSL
# SSL_REQUIRE=true
# Base URL for the app (used for SEO/sitemap generation)
# NEXT_PUBLIC_BASE_URL=https://tennisscorigami.com
